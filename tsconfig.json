{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "es6",
    "target": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": [
        "./@types/*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}